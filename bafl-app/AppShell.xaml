<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="bafl_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:bafl_app"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Bay Area Football League" Icon="bafl.png">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
       </Tab>
    </FlyoutItem>
    <MenuItem
        Text="Football Scoreboard"
        Clicked="FootballScoreboard_Clicked"
        IconImageSource="scoreboard.png"/>
    <MenuItem
        Text="Football Standings"
        Clicked="FootballStandings_Clicked"
        IconImageSource="standings.png"/>
    <FlyoutItem Title="Cheer Competition" Icon="cheer.png">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:CheerCompView}" />
       </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Pay BAFL: CashApp" Icon="cashapp.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:CashAppPayView}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Pay BAFL: Zelle" Icon="zelle.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ZellePayView}" />
        </Tab>
    </FlyoutItem>
</Shell>

