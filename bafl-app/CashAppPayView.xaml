<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bafl_app.CashAppPayView"
             Title="CashApp">

    <VerticalStackLayout>
        <Label Text="CashApp" TextColor="Green" HorizontalTextAlignment="Center" FontSize="Large" />
        <Label Text="$payBAFL" FontSize="Large" HorizontalTextAlignment="Center" />
        <Image Source="cashapp_code.png" WidthRequest="300" Margin="10,20,10,20">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
            </Image.GestureRecognizers>
        </Image>
        <Label FontSize="Small" Text="Scan to pay or click to go directly."
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Start" />
    </VerticalStackLayout>

</ContentPage>

