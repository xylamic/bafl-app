<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bafl_app.ZellePayView"
             Title="Zelle">

    <VerticalStackLayout Margin="10,20,10,10">

        <Label Text="bafltreasurer21@gmail.com" FontSize="Large" TextColor="Purple" HorizontalTextAlignment="Center" Grid.Row="0" />
        <Image Source="zelle_code.png" WidthRequest="300" Grid.Row="1" Margin="0,20,0,20">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
            </Image.GestureRecognizers>
        </Image>
        <Label FontSize="Small" Text="Scan to pay or click to go directly."
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Start"
               Grid.Row="2"/>
        <Label Grid.Row="3" />
    </VerticalStackLayout>

</ContentPage>

