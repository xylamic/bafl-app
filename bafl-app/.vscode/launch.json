    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET MAUI",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "maui: Build"
        },
        // This configuration is for UNIT TESTING on the local arm64 machine
        {
            "name": "Net8.0 App Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Net8.0 App",
            "program": "${workspaceFolder}/bin/Debug/net8.0/osx-arm64/bafl-app.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}